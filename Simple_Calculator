#include<stdio.h>
int main()
{
    printf("1>Addition\n 2>subtraction\n 3>multiplication\n 4>Divide\n");
    while(1)
    {
        int choice;
        printf("enter your choices= ");
        scanf("%d",&choice);
        
        switch(choice)
        {
            int a,b,c;
            case 1: printf("enter the numbers= ");
                    scanf("%d%d",&a,&b);
                    c=a+b;
                    printf("the addition is= %d",c);
                    break;
                    
                    
                    
            case 2:printf("enter the numbers= ");
                    scanf("%d%d",&a,&b);
                    c=a-b;
                    printf("the subtraction is= %d",c);
                    break;
            
            case 3:printf("enter the numbers= ");
                    scanf("%d%d",&a,&b);
                    c=a*b;
                     printf("the multiplication of these two numbers is= %d",c);
                    break;
            
            
            case 4:printf("enter the numbers= ");
                    scanf("%d%d",&a,&b);
                    c=a/b;
                    if(b==0)
{
                    printf("not defined");
                     break;
}
                     printf("the division of these two numbers is= %d",c);
                    break;
                    
                    case 5: return 0;
                    
                    default: 
                    printf("invalid choice\n");
            
        }
    }
}
